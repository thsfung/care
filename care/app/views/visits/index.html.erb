<div class='visit'>
<h1>Visits</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @visits.each do |visit| %>
      <tr>
        <td><%= visit.visitdate %></td>
        <td><%= link_to 'Edit', edit_visit_path(visit) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Visit', new_visit_path(:patient_id => @patient.id) %>

</div>