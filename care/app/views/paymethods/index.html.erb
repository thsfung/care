<p id="notice"><%= notice %></p>

<h1>Paymethods</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @paymethods.each do |paymethod| %>
      <tr>
        <td><%= link_to 'Show', paymethod %></td>
        <td><%= link_to 'Edit', edit_paymethod_path(paymethod) %></td>
        <td><%= link_to 'Destroy', paymethod, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Paymethod', new_paymethod_path(:patient_id => @patient.id) %>
